{
  "name": "Octoboard",
  "version": "0.1.0",
  
  "description": "Enables to show a diff on the GitHub dashboard.",
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  
  "browser_action": {
    "default_icon": "img/icon16.png"
  },
  
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": 
      [
        "js/lib/jquery.js", 
        "js/config.js", 
        "js/diff.js", 
        "js/issue.js",
        "js/autopaging.js"
      ],
      "css": ["css/diff.css", "css/issue.css"]
    }
  ],
  "options_page": "html/options.html",
  "background_page": "html/background.html"
}
